{
    "include": [
        "**/*.ts",
        "test"
    ],
    "exclude": [
        "node_modules"
    ],
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "lib": [
            "es5",
            "es6",
            "es2015.promise"
        ],
        "moduleResolution": "node",
        "allowJs": true,
        "removeComments": true,
        "rootDirs": [
            "./"
        ],
        "typeRoots": [
            "./typings",
            "node_modules/@types"
        ],
        "strictNullChecks": true,
        "noImplicitAny": true,
        "baseUrl": ".",
        "allowSyntheticDefaultImports": true
    }
}